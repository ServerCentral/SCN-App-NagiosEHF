#!/usr/bin/make -f

configure: configure-stamp
configure-stamp:
	touch configure-stamp
build: build-indep
build-indep: build-stamp
build-stamp:
	dh_testdir
	(cd node_js ; npm install)
	touch build-stamp
clean:
	dh_testdir
	dh_testroot
	rm -rf node_js/node_modules/
	rm -f build-stamp configure-stamp

install: build
	dh_testdir
	dh_testroot
	dh_prep
	dh_installdirs
	touch `pwd`/debian/notapp-cp.init
	rm `pwd`/debian/notapp-cp.init
	cp `pwd`/misc/plane-init.sh `pwd`/debian/notapp-cp.init	
	cp `pwd`/debian/notapp-cp.logrotate `pwd`/debian/notapp-cp/etc/logrotate.d/
	cp -Rp `pwd`/node_js/ `pwd`/debian/notapp-cp/home/www/notapp-cp/htdocs/node_js
	cp -Rp `pwd`/misc/ `pwd`/debian/notapp-cp/home/www/notapp-cp/htdocs/misc
	cp -Rp `pwd`/db_scripts/ `pwd`/debian/notapp-cp/home/www/notapp-cp/htdocs/db_scripts
	cp -Rp `pwd`/cake/app/ `pwd`/debian/notapp-cp/home/www/notapp-cp/htdocs/cake/app
	tar -zxvf `pwd`/misc/cake/2.3.5.tar.gz -C `pwd`/debian/notapp-cp/home/www/notapp-cp/htdocs/cake --strip-components 1 cakephp-2.3.5/index.php cakephp-2.3.5/lib
	cp -p `pwd`/misc/librabbitmq.so.1.0.1.php54 `pwd`/debian/notapp-cp/usr/local/lib/librabbitmq.so.1.0.1
	ln -s ./librabbitmq.so.1.0.1 `pwd`/debian/notapp-cp/usr/local/lib/librabbitmq.so.1
	ln -s ./librabbitmq.so.1 `pwd`/debian/notapp-cp/usr/local/lib/librabbitmq.so

	
binary-indep: build install

binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installdirs
	dh_install
	dh_installinit
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	chmod -R a+w `pwd`/debian/notapp-cp/home/www/notapp-cp/htdocs/cake/app/tmp
	dh_installdeb
	dh_gencontrol
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
